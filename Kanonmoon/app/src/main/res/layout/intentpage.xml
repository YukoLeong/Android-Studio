<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/IntentButton1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:text="Show Website"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/IntentButton2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IntentButton1"
            android:layout_centerHorizontal="true"
            android:text="Show Map Location"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/IntentButton3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IntentButton2"
            android:layout_centerHorizontal="true"
            android:text="Send Email"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/IntentButton4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IntentButton3"
            android:layout_centerHorizontal="true"
            android:text="Send Image"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/IntentButton5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IntentButton4"
            android:layout_centerHorizontal="true"
            android:text="Share Message"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/IntentButton6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IntentButton5"
            android:layout_centerHorizontal="true"
            android:text="Call a Number"
            android:textAllCaps="false" />
    </RelativeLayout>
</LinearLayout>